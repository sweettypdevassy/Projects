pipeline {
    agent any
    environment {
        DOCKER_IMAGE = "02619/cicd-demo:${BUILD_NUMBER}" // Your Docker image tag format
        PATH = "/Users/harisankars/.rd/bin:$PATH"
    }
    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'automation', url: 'https://github.com/sweettypdevassy/Projects.git' // Use your branch name
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t ${DOCKER_IMAGE} ./docker-cicd-demo' // Build Docker image
            }
        }
        stage('Run Tests') {
            steps {
                sh 'docker run --rm ${DOCKER_IMAGE} npm test -- --detectOpenHandles' // Run tests inside the container
            }
        }
        stage('Push to Docker Hub') {
            steps {
                withDockerRegistry([credentialsId: 'dockerhub-creds', url: 'https://index.docker.io/v1/']) {
                    sh 'docker push ${DOCKER_IMAGE}' // Push the image to Docker Hub
                }
            }
        }
        stage('Deploy to Staging') {
            steps {
                sh 'docker run -d --name staging-app -p 3000:3000 ${DOCKER_IMAGE}' // Deploy to staging
            }
        }
        stage('Deploy to Production') {
            when {
                branch 'main' // Only deploy to production from the main branch
            }
            steps {
                sh 'docker run -d --name production-app -p 80:3000 ${DOCKER_IMAGE}' // Deploy to production
            }
        }
    }
}





